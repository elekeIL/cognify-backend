# Application
APP_NAME=Cognify API
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./cognify.db

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API (for theme extraction and lesson generation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API (alternative LLM provider)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# LLM Provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=pdf,docx,txt

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Audio Generation
AUDIO_OUTPUT_DIR=./uploads/audio

# Base URL (for production deployment - used for generating audio URLs etc.)
# In production, set this to your actual domain e.g., https://api.yourdomain.com
BASE_URL=http://localhost:8000

# Security (comma-separated allowed hosts, use * for development)
ALLOWED_HOSTS=*

# ===========================================
# Cloudflare R2 Storage (Optional - for production)
# ===========================================
# Leave empty to use local file storage (development)
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens

# Your Cloudflare Account ID (found in URL: dash.cloudflare.com/<account_id>/...)
R2_ACCOUNT_ID=

# R2 API Token credentials (create at: Cloudflare Dashboard > R2 > Manage R2 API Tokens)
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=

# Your R2 bucket name
R2_BUCKET_NAME=cognify-storage

# Public URL for accessing files (either custom domain or R2.dev URL)
# Enable public access: R2 > your bucket > Settings > Public access
# Example: https://pub-xxxx.r2.dev or https://cdn.yourdomain.com
R2_PUBLIC_URL=

# ===========================================
# Email (SMTP) Configuration - for Password Reset
# ===========================================
# Leave empty to log emails to console (development)
# For production, use any SMTP provider (Gmail, SendGrid, Mailgun, etc.)

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@cognify.app
SMTP_FROM_NAME=Cognify
SMTP_USE_TLS=true

# Password Reset Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=5
