# Application
APP_NAME=Cognify API
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./cognify.db

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API (for theme extraction and lesson generation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API (alternative LLM provider)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# LLM Provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=pdf,docx,txt

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Audio Generation
AUDIO_OUTPUT_DIR=./uploads/audio

# Base URL (for production deployment - used for generating audio URLs etc.)
# In production, set this to your actual domain e.g., https://api.yourdomain.com
BASE_URL=http://localhost:8000

# Security (comma-separated allowed hosts, use * for development)
ALLOWED_HOSTS=*
